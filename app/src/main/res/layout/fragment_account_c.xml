<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 주량은 얼마인가요?"
        android:textSize="16.25sp"
        android:textColor="@color/background_start"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/alcohol_type"
        android:layout_width="61dp"
        android:layout_height="27.5dp"
        android:background="@drawable/oval"
        android:text="소주"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="10.75sp"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/alcohol_capacity"
            android:layout_width="68.5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/background_start"
            android:autofillHints="0.0"
            android:textSize="10sp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="병"
            android:textColor="@color/background_start"
            android:textSize="10sp"
            android:layout_gravity="bottom"
            android:gravity="center"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_icon"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            />



    </FrameLayout>

</LinearLayout>